# Main entrypoint of the workflow.
# Please follow the best practices:
# https://snakemake.readthedocs.io/en/stable/snakefiles/best_practices.html,
# in particular regarding the standardized folder structure mentioned there.

from snakemake.utils import min_version
from snakemake.remote import FTP, HTTP

FTP = FTP.RemoteProvider()
HTTP = HTTP.RemoteProvider()

import pandas as pd

##### set minimum snakemake version #####
min_version("7.22.0")


configfile: "config/config.yaml"


wildcard_constraints:
    reptype="\w+",
    sample="\w+",


samples = pd.read_csv(config["samples"], sep="\t").set_index(
    ["individual_id", "sample_id", "platform"], drop=False
)
samples.sort_index(inplace=True)


include: "rules/ref.smk"
include: "rules/longranger.smk"
include: "rules/align.smk"
include: "rules/xtea.smk"


reptype2 = []
for reptype in config["reptype"]:
    if reptype == "L1":
        reptype2.append("LINE1")
    else:
        reptype2.append(reptype.upper())


rule all:
    input:
        expand(
            expand(
                expand(
                    rules.run_xtea.output,
                    zip,
                    reptype1=config["reptype"],
                    reptype2=reptype2,
                    allow_missing=True,
                ),
                individual=set(samples["individual_id"]),
                platform="illumina_10x",
                allow_missing=True,
            ),
            outdir=config["outdir"],
        ),
